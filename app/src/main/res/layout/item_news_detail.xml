<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_default_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_default"
        android:paddingLeft="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"
        android:paddingStart="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textIsSelectable="true"
        tools:text="Default"/>

    <RelativeLayout
        android:id="@+id/indicator_quote_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default"
        android:background="@color/colorBlockQuotesBorder">

        <TextView
            android:id="@+id/text_quote_news_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_smallest"
            android:layout_marginStart="@dimen/margin_smallest"
            android:background="@color/colorContentItemBackground"
            android:paddingEnd="@dimen/margin_default"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_default"
            android:paddingStart="@dimen/margin_medium"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            tools:text="Quotes"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_default"
        android:contentDescription="@string/image_descriptor_detail_news_image_content"
        android:scaleType="centerCrop"/>

</LinearLayout>